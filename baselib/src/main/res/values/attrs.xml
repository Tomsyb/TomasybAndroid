<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="drawableText">
        <attr name="leftDrawable" format="reference|integer" />
        <attr name="rightDrawable" format="reference|integer" />
        <attr name="topDrawable" format="reference|integer" />
        <attr name="bottomDrawable" format="reference|integer" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
    </declare-styleable>
    <!--圆形imgview-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
</resources>