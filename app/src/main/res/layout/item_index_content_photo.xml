<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/b_main_white"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:background="@color/b_main_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/photo_title"
                android:singleLine="true"
                android:textSize="@dimen/s14"
                android:textColor="@color/b_main_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/icon_logo"
                    style="@style/index_content_two"/>
                <ImageView
                    android:src="@mipmap/icon_logo"
                    style="@style/index_content_two"/>
                <ImageView
                    android:src="@mipmap/icon_logo"
                    style="@style/index_content_two"/>
            </LinearLayout>
            <TextView
                android:id="@+id/photo_tv_time"
                android:layout_marginRight="@dimen/d8"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:textSize="@dimen/s12"
                android:textColor="@color/b_main_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>