<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.tomasyb.baselib.util.glide.GlideImageView
        android:id="@+id/wechat_img_head"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.example.tomasyb.baselib.util.glide.progress.CircleProgressView
        android:id="@+id/img_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:progress="0"
        android:visibility="gone"
        app:cpv_innerPadding="2dp"
        app:cpv_outerColor="@color/y_main_white"
        app:cpv_outerSize="1dp"
        app:cpv_progressNormalColor="@color/transparent"
        app:cpv_progressReachColor="@color/y_main_white"
        app:cpv_progressStyle="FillInnerArc"/>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.tomasyb.baselib.util.glide.GlideImageView
            android:id="@+id/persion_logo"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:textColor="@color/b_text_gray"
            android:textSize="@dimen/tv_sp_13"
            android:gravity="left"
            android:text="顶部使用GlidImage监听图片加载进度，上面头像模糊使用"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>