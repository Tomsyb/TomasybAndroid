<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tomasyb.tomasybandroid.ui.collect.CollectActivity">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_head_map"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/b_txt"
                    android:text="事故上报"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环湖风光游览区域"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/police_route"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/b_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="补充详情（选填）"
                android:textSize="15sp"/>
            <TextView
                android:visibility="gone"
                android:textSize="13sp"
                android:text="0"
                android:textColor="@color/b_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:textSize="13sp"
                android:text="/"
                android:textColor="@color/b_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:text="200"
                android:textColor="@color/b_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/exception_et"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/b_main_white"
            android:gravity="top"
            android:hint="补充详情可帮助更多的用户..."
            android:maxLength="200"
            android:padding="10dp"
            android:textColor="@color/b_text_gray"
            android:textColorHighlight="@color/b_text_gray"
            android:textSize="14sp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:overScrollMode="never" />
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/b_main_white"
        android:background="@color/main"
        android:padding="@dimen/dp_10"
        android:text="立即上报"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
